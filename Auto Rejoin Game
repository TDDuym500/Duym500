local TeleportService = game:GetService("TeleportService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- üîπ Khi m·∫•t k·∫øt n·ªëi ho·∫∑c b·ªã kick, t·ª± ƒë·ªông rejoin
LocalPlayer.OnTeleport:Connect(function(status)
    if status == Enum.TeleportState.Failed then
        wait(2) -- Ch·ªù 2 gi√¢y tr∆∞·ªõc khi th·ª≠ l·∫°i
        TeleportService:Teleport(game.PlaceId, LocalPlayer)
    end
end)

-- üîπ Auto rejoin sau khi b·ªã kick kh·ªèi game
LocalPlayer.OnKick:Connect(function(reason)
    print("B·ªã kick, l√Ω do:", reason)
    wait(3) -- Ch·ªù 3 gi√¢y ƒë·ªÉ tr√°nh b·ªã kh√≥a teleport
    TeleportService:Teleport(game.PlaceId, LocalPlayer)
end)

print("‚úÖ Auto Rejoin ƒë√£ k√≠ch ho·∫°t!")
